<div class="reports-container">
  <div class="reports-header">
    <h1 class="page-title">Reporte de Ventas</h1>
    <p class="page-subtitle">Resumen de actividad comercial</p>
  </div>

  <!-- Filtros -->
  <div class="filter-card">
    <%= form_with url: backstore_reports_path, method: :get, local: true, class: "filter-form" do |f| %>
      <div class="filter-group">
        <%= f.label :start_date, "Desde", class: "filter-label" %>
        <%= f.date_field :start_date, value: @start_date, class: "filter-input" %>
      </div>
      <div class="filter-group">
        <%= f.label :end_date, "Hasta", class: "filter-label" %>
        <%= f.date_field :end_date, value: @end_date, class: "filter-input" %>
      </div>
      <div class="filter-actions">
        <%= f.submit "Filtrar", class: "btn-primary" %>
      </div>
    <% end %>
  </div>

  <!-- Tarjetas de Resumen -->
  <div class="summary-grid">
    <div class="summary-card revenue-card">
      <div class="card-icon">üí∞</div>
      <div class="card-info">
        <span class="card-label">Total Recaudado</span>
        <span class="card-value"><%= number_to_currency(@total_revenue) %></span>
      </div>
    </div>

    <div class="summary-card count-card">
      <div class="card-icon">üõí</div>
      <div class="card-info">
        <span class="card-label">Cantidad de Ventas</span>
        <span class="card-value"><%= @sales_count %></span>
      </div>
    </div>
  </div>

  <!-- Tabla de Ventas (Opcional, o desglose por d√≠a) -->
  <div class="details-section">
    <h3 class="section-title">Desglose por D√≠a</h3>
    <div class="table-card">
      <table class="reports-table">
        <thead>
          <tr>
            <th>Fecha</th>
            <th class="text-right">Total</th>
          </tr>
        </thead>
        <tbody>
          <% @sales_by_day.each do |date, total| %>
            <tr>
              <td><%= date.strftime("%d/%m/%Y") %></td>
              <td class="text-right font-weight-bold"><%= number_to_currency(total) %></td>
            </tr>
          <% end %>
          <% if @sales_by_day.empty? %>
            <tr>
              <td colspan="2" class="text-center text-muted">No hay ventas en este per√≠odo.</td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <div class="pagination-container">
      <%= paginate @sales_by_day %>
    </div>
    
    <div class="pagination-nav">
      <% if @sales_by_day.prev_page %>
        <%= link_to_prev_page @sales_by_day, '‚Üê Anterior', class: 'btn-nav' %>
      <% else %>
        <span class="btn-nav disabled">‚Üê Anterior</span>
      <% end %>

      <% if @sales_by_day.next_page %>
        <%= link_to_next_page @sales_by_day, 'Siguiente ‚Üí', class: 'btn-nav' %>
      <% else %>
        <span class="btn-nav disabled">Siguiente ‚Üí</span>
      <% end %>
    </div>
  </div>
</div>

