<div class="form-container">
  <h1 class="form-title">Registro de Usuario</h1>

  <%= form_with model: @user, local: true, class: "user-form" do |f| %>
    
    <div class="form-group">
      <%= f.label :name, "Nombre", class: "form-label" %>
      <%= f.text_field :name, class: "form-input", placeholder: "Ingresa tu nombre" %>
    </div>

    <div class="form-group">
      <%= f.label :surname, "Apellido", class: "form-label" %>
      <%= f.text_field :surname, class: "form-input", placeholder: "Ingresa tu apellido" %>
    </div>

    <div class="form-group">
      <%= f.label :email, "Email", class: "form-label" %>
      <%= f.email_field :email, class: "form-input", placeholder: "tu@email.com" %>
    </div>

    <div class="form-group">
      <%= f.label :role_id, "Rol de Usuario", class: "form-label" %>
      <%= f.collection_select :role_id, Role.all, :id, :name, { prompt: "Selecciona un rol" }, class: "form-select" %>
    </div>

    <div class="alert alert-info" style="margin: 1rem 0; padding: 1rem; background: #1e3a8a; border-radius: 0.5rem; color: #e5e7eb;">
      ℹ️ Se asignará automáticamente la contraseña por defecto: <strong>123456</strong>
      <br>El usuario deberá cambiarla en su primer inicio de sesión.
    </div>

    <div class="form-actions">
      <%= f.submit "Registrarse", class: "form-submit" %>
    </div>

  <% end %>

  <% if @user.errors.any? %>
    <div class="form-errors">
      <h3 class="error-title">Se encontraron <%= @user.errors.count %> errores:</h3>
      <ul class="error-list">
        <% @user.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
</div>
